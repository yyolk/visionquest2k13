// second.jade

//- include mixins


mixin piece(piece)
  h5: a(href=piece.homepage)= piece.artist
  h5: strong: em= piece.title
  p!= piece.description
  img(src=piece.image, class="img-responsive")
  p.small= piece.videoinfo

mixin event(event)
  h4= event.title
  p!= event.description

mixin eventblock(day)
  ul(class="list-inline")
    - var i = 0
    each event in events 
      if event.time == day
        - i++
    if i > 1
      - i = 0
      each event in events
        div(id=day+"List")
        if event.time == day

          - i++
          if i==1
            li
              strong: a(href="#"+day+event._id)= event.title
          else
            li: a(href="#"+day+event._id)= event.title
  each event in events
    if event.time == day
      if i > 1
        a(name=day+event._id, class="pull-right", href="#"+day+"List") 
          small BACK &uarr;
      +event(event)
      each piece in event.pieces
        +piece(piece)


